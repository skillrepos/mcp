{
  // Use the official base image
  "image": "mcr.microsoft.com/devcontainers/base:bookworm",

  // Host machine requirements
  "hostRequirements": {
    "cpus": 4,
    "memory": "16gb",
    "storage": "32gb"
  },

  "forwardPorts": [8000, 6274, 6277],
  "portsAttributes": {
    "8000": {
      "label": "MCP Server",
      "visibility": "public"
    },
    "6474": {
      "label": "MCP Inspector Interface",
      "visibility": "public"
    },
    "6477": {
      "label": "MCP Inspector proxy",
      "visibility": "public"
      }
  },

  // Dev Container Features
  "features": {
    "ghcr.io/devcontainers/features/docker-from-docker:1": {},
    "ghcr.io/devcontainers/features/github-cli:1": {},
    "ghcr.io/devcontainers/features/python:1": {},
    "node": {
      "version": "lts",
      "nodeGypDependencies": true
    }
  },

  // VS Code customizations
  "customizations": {
    "vscode": {
      "settings": {
        "python.terminal.activateEnvInCurrentTerminal": true,
        "python.defaultInterpreterPath": ".venv/bin/python",
        "github.copilot.enable": {
          "*": false,
          "plaintext": false,
          "markdown": false,
          "scminput": false
        },
        "workbench.startupEditor": "none",
        "workbench.editorAssociations": {
          "*.md": "vscode.markdown.preview.editor"
        }
      },
      "extensions": [
        "mathematic.vscode-pdf",
        "vstirbu.vscode-mermaid-preview"
      ]
    }
  },

 

  // Install & setup on create
  "postCreateCommand": "bash -i scripts/pysetup.sh py_env && bash -i scripts/startOllama.sh && nohup bash -c 'source scripts/start-inspector.sh'",

  // Start Ollama on container start
  "postStartCommand": "nohup bash -c 'ollama serve &'"
}
